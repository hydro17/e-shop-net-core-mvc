@model IEnumerable<eShop_NETCoreMVC.Models.Product>
@{
  ViewData["Title"] = "Producs";
}

<br /><br />

<div class="row">
  <div class="col-6">
    <h3 class="text-info">Products List</h3>
  </div>

  <div class="col-6 text-right">
    <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product</a>
  </div>
</div>

<br />

<table class="table table-striped">
  <tr class="table-info">
    <th style="width:200px">@Html.DisplayNameFor(m=>m.Name)</th>
    <th>@Html.DisplayNameFor(m=>m.Price)</th>
    <th></th>
  </tr>

  @foreach(Product product in Model)
  {
    <tr>
      <td >
        @Html.DisplayFor(m=>product.Name)
      </td>
      <td>
        @Html.DisplayFor(m=>product.Price)
      </td>
      <partial name="_TableButtonsEditDetailsDeletePartial" model="product.Id" />
    </tr>
  }
</table>


